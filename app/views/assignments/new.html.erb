<%= form_for :assignment, url: assignments_path do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
  <p>
  <%= f.label :description %><br>
  <%= f.text_area :text %>
  </p>
  <p>
  <%= f.label :subject %><br>
  <%= f.text_field :subject %>
  </p>
  <p>
  <%= f.label :due_date %><br>
  <%= f.datetime_select :due_date %>
  </p>
  <p>
  <%= f.submit %>
  </p>
<% end %>
